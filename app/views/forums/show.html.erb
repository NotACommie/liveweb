<div class="row-fluid"><!-- begin forum body -->
    <div class="span12 forum-header">
      <%= @forum.name %>
      <a href="#"><i class="icon-sort-down pull-right reply-arrow-down"></i></a>
      <i class="icon-sort-up pull-right reply-arrows reply-arrow-up"></i></span>
  		<% @forum.topics.each do |topic| %>
    	   <div class="row-fluid forum-info">
      			<div class="span7 forum-name">
              <h4>
      				<i class="icon-comment"></i> 
              <%= link_to topic.title, forum_topic_path(:forum_id => params[:id], :id => topic.id) %>
              </h4>
      				<div class="row-fluid"><!-- begin nested row -->
      					<div class="span12 forum-description topic-info">
                    <i class="icon-user"></i> Posted by <%= link_to topic.user.name, user_path(topic.user) %>    
                    <i class="icon-time"></i> <%= topic.created_at.strftime("%m/%d/%y at %l:%M %p") %>
                    <i class="icon-comments"></i> <%= pluralize topic.replies.size, 'reply' %>
                 </div>   
      				</div><!-- end nested row -->
      			</div>
            <div class="span1 offset3 reply-count-header">Views
              <div class="row-fluid"><!-- begin Views nested row -->
                <div class="span12 reply-count-body"><%= topic.views %></div>
              </div><!-- end Views nested row -->
            </div>
      			<div class="span1 reply-count-header"><%= "Reply".pluralize(topic.replies.size) %>
      				<div class="row-fluid"><!-- begin Replies nested row -->
      					<div class="span12 reply-count-body"><%= topic.replies.size %></div>
     			 	</div>	<!-- end Replies nested row -->
    			</div>
    		</div>
    		<% end %>
		</div>
</div><!-- end forum body -->
