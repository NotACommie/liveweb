<% provide(:title, 'New Forum') %>
<h1>NEW FORUM</h1>
	<div class="row">
  		<div class="span6 offset3">
    		<%= form_for(@forum)  do |f| %>

      		<%= f.label :name %>
      		<%= f.text_field :name, :placeholder => "Title" %>

      		<%= f.label :description %>
      		<%= f.text_area :description %>

          <%= f.label :category %>
          <%= f.text_field :category_id %>

      		<%= f.submit "Create forum", class: "btn btn-large btn-primary" %>
    	<% end %>
  	</div>
</div>
