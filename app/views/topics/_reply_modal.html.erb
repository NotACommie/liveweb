<div id="replyModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="ReplyFormModal" aria-hidden="true">
    <div class="modal-header message-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h1 id="myModalLabel">Compose Reply</h3>
    </div>
    <div class="modal-body">
      <%= form_for([@topic, @topic.replies.build], :html => { :class => "ReplyForm"}) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, :placeholder => "Title", :class => "input-xlarge" %>

      <%= f.label :content %>
      <%= f.text_area :content, :rows => "10", :class => "span12" %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Submit reply", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>