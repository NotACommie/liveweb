<% provide(:title, 'New Topic') %>
<h1>NEW TOPIC</h1>

<% if signed_in? %>
	<div class="row">
  		<div class="span6 offset3">
    		<%= form_for(@topic) do |f| %>

      		<%= f.label :title %>
      		<%= f.text_field :title %>

      		<%= f.label :content %>
      		<%= f.text_field :content %>

      		<%= f.submit "Create topic", class: "btn btn-large btn-primary" %>
    	<% end %>
  	</div>
</div>
<% else %>
<li><%= link_to "Sign in to post!", signin_path %></li>
<% end %>